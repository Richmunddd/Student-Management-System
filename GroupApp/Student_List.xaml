<Window x:Class="GroupApp.Student_List"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="Student List" Height="400" Width="600" WindowStartupLocation="CenterScreen">  
    <Grid Background="#FF1A1C24">  
        <StackPanel Margin="10">  
            <TextBox x:Name="SearchBox"   
             Width="300"   
             Height="30"   
             Margin="0,0,0,10"   
             ToolTip="Search by name or email..."  
             TextChanged="SearchBox_TextChanged"/>  
            <ListBox x:Name="StudentListBox"  
                 MouseDoubleClick="StudentListBox_MouseDoubleClick"
                 Margin="10"   
                 FontSize="14"   
                 Foreground="White"  
                 Background="#FF2B2B2B" />  
        </StackPanel>  
    </Grid>  
</Window>

