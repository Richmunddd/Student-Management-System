<Window x:Class="GroupApp.AssignCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Course" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="StudentLabel" FontWeight="Bold" Margin="0,0,0,10"/>
            <ComboBox x:Name="CourseComboBox" Height="30" Margin="0,0,0,10"/>
            <Button Content="Save" Height="30" Click="Save_Click"/>
            <Button Content="Remove from Course"
        Height="30"
        Margin="0,10,0,0"
        Background="DarkRed"
        Foreground="White"
        Click="Remove_Click"/>

        </StackPanel>
    </Grid>
</Window>

